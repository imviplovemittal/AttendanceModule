<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp">


    <!--personal info card-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/info_card_view">
    </android.support.v7.widget.CardView>



    <!--attendence card before clicking it-->
    <android.support.v7.widget.CardView
        android:id="@+id/att_card_view"
        android:layout_below="@+id/info_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RelativeLayout>
    </android.support.v7.widget.CardView>




    <!--new attendence card with full details after clicking the
        the previous card-->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/att_recycler_view"
        android:layout_below="@+id/info_card_view">


    </android.support.v7.widget.RecyclerView>
</RelativeLayout>