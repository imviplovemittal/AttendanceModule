<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_margin="15dp"
    android:id="@+id/info_card_view"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:text="Alan"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/roll_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:text="RA1511003010811"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/roll_no"
        android:layout_below="@+id/roll_no"
        android:text="Computer Science and Engineering"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/branch"
        android:layout_alignBottom="@+id/branch"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/branch"
        android:text="3"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/branch"
        android:layout_below="@+id/branch"
        android:id="@+id/email_id"
        android:text="christianalan_as@srmuniv.edu.in"
        android:textSize="18sp" />

</RelativeLayout>

</android.support.v7.widget.CardView>