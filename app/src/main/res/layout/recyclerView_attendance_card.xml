<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sub_code"
            android:layout_below="@+id/sub_code"
            android:text="G.K.Sandhia"
            android:textSize="18sp"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/att_progress_bar"
            android:layout_alignStart="@+id/textView"
            android:text="1009"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sub_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sub_name"
            android:layout_below="@+id/sub_name"
            android:text="15SE203"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sub_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="28dp"
            android:layout_toStartOf="@+id/att_progress_bar"
            android:text="Data Structures"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/att_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:minHeight="100dp"
            android:minWidth="100dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="80sp"
            android:textStyle="bold"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/att_progress_bar"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:text="80%"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>